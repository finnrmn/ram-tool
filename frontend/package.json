{
  "name": "ram-tool",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/dist/main.js",                
  "scripts": {
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rimraf node_modules dist .vite .tsc-out && rimraf \"src/**/*.js\" \"src/**/*.js.map\"",

    "build:renderer": "vite build --mode desktop",                     
    "build:electron": "tsc -p electron/tsconfig.json",                
    "build:desktop": "npm run build:renderer && npm run build:electron && electron-builder -c electron/electron-builder.yml", 
    "dev:electron": "concurrently -k -r \"vite\" \"wait-on http://localhost:5173 && electron .\""                             
  },
  "dependencies": {
    "katex": "^0.16.22",
    "plotly.js": "^2.26.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-katex": "^3.1.0",
    "react-plotly.js": "^2.6.0",
    "reactflow": "^11.10.3",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "rimraf": "^6.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",

    "electron": "^30.0.0",               
    "electron-builder": "^24.13.3",       
    "concurrently": "^8.2.2",             
    "wait-on": "^7.2.0"                   
  }
}
